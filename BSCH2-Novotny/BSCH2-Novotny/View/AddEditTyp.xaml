<Window x:Class="BSCH2_Novotny.AddEditTyp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSCH2_Novotny"
        mc:Ignorable="d"
        Title="AddEditTyp" Height="137" Width="231" ResizeMode="NoResize">
    <Grid>
        <Label Content="Typ Zbraně:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="Tb_typ" Text="{Binding Typ, Mode = TwoWay}" HorizontalAlignment="Left" Margin="87,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
        <Button x:Name="Btn_storno" Content="Storno" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="20" Width="50" Command="{Binding CloseCommand}"/>
        <Button x:Name="Btn_ok" Content="Ok" HorizontalAlignment="Left" Margin="157,70,0,0" VerticalAlignment="Top" Height="20" Width="50" Command="{Binding AddTypCommand}"/>

    </Grid>
</Window>

